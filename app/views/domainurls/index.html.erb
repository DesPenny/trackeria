            <td><center><%= f.category rescue "N/A" %></center></td>
            <td><center><% if f.google_rank==nil && f.created_at != f.updated_at %>N/A
                        <% else %>
                        <%= f.google_rank rescue "N/A" %>
                        <% end %></center></td>
            <td><center><% if f.bing_rank==nil && f.created_at != f.updated_at %>N/A
                        <% else %>
                        <%= f.bing_rank %>
                        <% end %></center</td>
            <td><center><% if f.yahoo_rank==nil && f.created_at != f.updated_at %>N/A
                        <% else %>
                        <%= f.yahoo_rank%>
                        <% end %></center></td>
            <td><center><% if f.alexa_global==nil && f.created_at != f.updated_at %>N/A
                        <% else %>
                        <%= f.alexa_global %>
                        <% end %></center></td>
            <td><center><% if f.updated_at.min<f.created_at.min+1 %>
