
<div class="row">
  <center><p id="notice"><%= notice %></p></center>
<div class="small-10 small-offset-1 columns">
  <b>URL:</b>
  <%= @domainurl.domainurl %> | 
  <b>Keyword:</b>
  <%= @domainurl.keyword %> |
  <b>Country:</b>
  <%= @domainurl.googlesource %> |
  <b>Category:</b>
  <%= @domainurl.category %>
  <br /><br />
    <%= link_to 'Edit', edit_domainurl_path(@domainurl) %> |
    <%= link_to 'Back', domainurls_path %>
</div>
</div>
<div class="row">

<% if @history.count > 0 %>
<%= render_chart(@chart, 'chart') %>
<div id='chart'>
<div class="small-4 columns">
    </div>
</div>
<% else %>
<div class="small-4 small-offset-1 columns">
    <br /><br />
Not enough data to render chart.
<br /><br />
</div>
<% end %>

</div>

<div class="row">
<div class="small-10 small-offset-1 columns">
<table>
    <thead>
        <tr>
            <!-- <th><center><%= link_to sortable "google_rank", "Google" %></center></th>
            <th><center><%= link_to sortable "bing_rank", "Bing" %></center></th>
            <th><center><%= link_to sortable "yahoo_rank", "Yahoo" %></center></th>
            <th><center><%= link_to sortable "alexa_rank", "Alexa" %></center></th>
            <th><center><%= link_to sortable "updated_at", "Date" %></center></th> -->
            <!-- <th><center><div data-alert class="alert-box secondary">Google</div></center></th>
            <th><center><div data-alert class="alert-box secondary">Bing</div></center></th>
            <th><center><div data-alert class="alert-box secondary">Yahoo</div></center></th>
            <th><center><div data-alert class="alert-box secondary">Alexa</div></center></th>
            <th><center><div data-alert class="alert-box secondary">Date</div></center></th> -->
            <th><center>Date</center></th>
            <th><center>Google</center></th>
            <th><center>Bing</center></th>
            <th><center>Yahoo</center></th>
            <th><center>Alexa</center></th>
            
        </tr>
    </thead>
    <tbody>
        <tr>   
            <td><center><% if @domainurl.updated_at<@domainurl.created_at+3 %>
                awaiting update
                <% else %>
                <%= (@domainurl.updated_at.to_date) rescue "-" %>
                <% end %></center></td>     
            <td><center><% if @domainurl.google_rank==nil && @domainurl.created_at != @domainurl.updated_at %>-
                        <% else %>
                        <%= @domainurl.google_rank rescue "-" %>
                        <% end %></center></td>
            <td><center><% if @domainurl.bing_rank==nil && @domainurl.created_at != @domainurl.updated_at %>-
                        <% else %>
                        <%= @domainurl.bing_rank %>
                        <% end %></center</td>
            <td><center><% if @domainurl.yahoo_rank==nil && @domainurl.created_at != @domainurl.updated_at %>-
                        <% else %>
                        <%= @domainurl.yahoo_rank%>
                        <% end %></center></td>
            <td><center><% if @domainurl.alexa_global==nil && @domainurl.created_at != @domainurl.updated_at %>-
                        <% else %>
                        <%= @domainurl.alexa_global %>
                        <% end %></center></td>
            
        </tr>
          <% @history.each do |f| %>   
        <tr>
            <td><center><%= (f.created_at.to_date) rescue "" %></center></td>
            <td><center><% if f.google_rank==nil %>-
                        <% else %>
                        <%= f.google_rank rescue "-" %>
                        <% end %></center></td>
            <td><center><% if f.bing_rank==nil %>-
                        <% else %>
                        <%= f.bing_rank rescue "-" %>
                        <% end %></center</td>
            <td><center><% if f.yahoo_rank==nil %>-
                        <% else %>
                        <%= f.yahoo_rank rescue "-" %>
                        <% end %></center></td>
            <td><center><% if f.alexa_global==nil %>-
                        <% else %>
                        <%= f.alexa_global rescue "-" %>
                        <% end %></center></td>
            
        <tr>
        </tr>
        <% end %>   
    </tbody>
</table>







</div>
</div>